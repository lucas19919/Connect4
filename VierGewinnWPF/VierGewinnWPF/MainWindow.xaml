<Window 
    x:Class="VierGewinntWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:VierGewinntWPF"
    mc:Ignorable="d"
    WindowState="Normal" ResizeMode="NoResize"
    Title="Connect 4" Height="484" Width="558">
    <Grid Background="#FF181818">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="262.5"/>
            <ColumnDefinition Width="262.5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="270" Source="/connect4-logo.png" Grid.ColumnSpan="2" Margin="128,27,0,0" Grid.Row="1" OpacityMask="White"/>
        <Button x:Name="StartButton" Content="Play" HorizontalAlignment="Left" Height="32" Margin="214,144,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" Grid.ColumnSpan="2" Grid.RowSpan="2" Click="StartButton_Click" Background="#FF3D3D3D" BorderBrush="#FF3D3D3D" Foreground="White"/>
    </Grid>
</Window>
